@model ShapeViewModel<AuditTrailIndexOptions>
@{
    var term = Model.Value.FilterResult.FirstOrDefault(x => x.TermName == "category");
}

<h4 class="card-title">@T["Category"]</h4>

<pre class="mb-3">@(@term != null ? "category:" + @term.ToString() : "category:...")</pre>
<p>@T["Filters on the audit trail category."]</p>
<div class="d-block text-right">
    <span >
        <i class="fas fa-sm fa-bars text-primary" aria-hidden="true"></i>
    </span>
</div>
