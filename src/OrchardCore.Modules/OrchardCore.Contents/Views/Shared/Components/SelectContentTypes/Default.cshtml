@model SelectContentTypesViewModel

<div class="row">
    @for (var i = 0; i < Model.ContentTypeSelections.Length; i++)
    {
        var contentType = Model.ContentTypeSelections[i];
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 col-xl-2">
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="@Html.IdFor(m => m.ContentTypeSelections[i])" name="@Model.HtmlName" checked="@contentType.IsSelected" value="@contentType.ContentTypeDefinition.Name">
                <label class="form-check-label" for="@Html.IdFor(m => m.ContentTypeSelections[i])">@contentType.ContentTypeDefinition.DisplayName</label>
            </div>
        </div>
    }
</div>
