@model ShapeViewModel<ContentOptionsViewModel>
@{
    var term = Model.Value.FilterResult.FirstOrDefault(x => x.TermName == "text");
}

<h4 class="card-title">Display Text</h4>

<pre class="mb-3">@(@term != null ? "text:" + @term.ToString() : "text:...")</pre>
<p>@T["Filters on the Display Text of a content item."]</p>
<div class="d-block text-right">
    <span>
        <i class="fas fa-sm fa-check text-primary" aria-hidden="true"></i>
    </span>
    <span >
        <i class="fas fa-sm fa-bars text-primary" aria-hidden="true"></i>
    </span>
</div>
